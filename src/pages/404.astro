---
import { TbError404 } from "react-icons/tb";

import "./styles/global.css";

import "@fontsource-variable/outfit";
import "@fontsource-variable/space-grotesk";

import Cursor from "../components/Cursor.astro";
---

<main>
  <Cursor />
  <div class="container">
    <h1>
      <TbError404 />
    </h1>
    <h3>uh oh.</h3>
    <p>You are lost in this infinite space. Get back</p>
    <a class="closebutton" type="button" href="/" title="Home">
      Return to Home
    </a>
  </div>
</main>

<style>
  .container h1 svg {
    font-size: 98px;
    fill: var(--purple-dark);
    stroke: var(--purple);
  }

  .container h3 {
    font-size: 32px;
    margin: 0px;
    color: var(--purple);
  }

  main {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    height: 100vh;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
  }

  .closebutton {
    background-color: var(--background-dark);
    color: var(--content);
    border: 2px solid var(--border);
    border-radius: 12px;
    padding: 6px 12px;
    font-size: 16px;
    font-weight: 700;
    -webkit-box-shadow: 0px 0px 12px 4px var(--background);
    box-shadow: 0px 0px 12px 4px var(--background);
    z-index: 3;
    cursor: pointer;
  }

  .container {
    width: 80vw;
    height: 80vh;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    background: var(--box);
    border: 1px solid var(--border);
    opacity: 0.8;
    backdrop-filter: blur(12px);
    border-radius: 32px;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -ms-flex-direction: column;
    flex-direction: column;
    gap: 8px;
    box-shadow: 0px 0px 100px 10px #8a5ad118;
  }

  .container p {
    color: var(--level-color);
    font-size: 18px;
    text-align: center;
  }

  @media only screen and (max-width: 540px) {
  .container {
    width: 95vw;
    height: 95vh;
  }
}


@media only screen and (max-width: 460px) {
  main {
    margin: 12px;
  }
  .container {
    padding: 24px;
    height: 86vh;

  }
  .container p {
    font-size: 16px;
  }
}
</style>
